<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sloth.slothapp.RegisterActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Créer votre compte"
        android:textSize="32dp"
        android:textColor="@color/colorText"
        android:textAlignment="center"
        android:layout_marginBottom="50dp"
        />

    <EditText
        android:id="@+id/ETRegisterMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Adresse Email"
        android:textColor="@color/colorSecondary"
        android:textColorHint="@color/colorSecondaryLight"
        android:layout_margin="10dp" />

    <EditText
        android:id="@+id/ETRegisterName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Nom Complet"
        android:textColor="@color/colorSecondary"
        android:textColorHint="@color/colorSecondaryLight"
        android:layout_margin="10dp"
        />

    <EditText
        android:id="@+id/ETRegisterPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Mot de passe"
        android:textColor="@color/colorSecondary"
        android:textColorHint="@color/colorSecondaryLight"
        android:layout_margin="10dp"
        />

    <EditText
        android:id="@+id/ETRegisterPasswordConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Confirmez votre Mot de passe"
        android:textColor="@color/colorSecondary"
        android:textColorHint="@color/colorSecondaryLight"
        android:layout_margin="10dp"
        />

    <Button
        android:id="@+id/BTRegisterCreate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorSecondary"
        android:text="Creer mon compte"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:id="@+id/TVRegisterBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Retourner à la page de connexion"
        android:textColor="@color/colorText"
        android:layout_margin="20dp"
        />

</LinearLayout>
